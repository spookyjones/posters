<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(poster) -%>">
  <span class='title'>
    <%= poster.name %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.posters_poster_path(poster), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_posters_admin_poster_path(poster), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.posters_admin_poster_path(poster), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: poster.name)}}  ) %>
  </span>
</li>
